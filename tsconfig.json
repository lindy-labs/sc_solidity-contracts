{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "noEmitOnError": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"]
    }
  },
  "include": [
    "./hardhat.config.ts",
    "./artifacts/**/*",
    "./test",
    "./typechain",
    "./src",
    "./scripts",
    "./deploy",
    "./deployments"
  ],
  "exclude": ["./dist", "./node_modules"]
}
