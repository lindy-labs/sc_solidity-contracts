{
  "name": "sandclock-eth-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "ethereum:all-local": "yarn ethereum:prep:local && yarn ethereum:codegen && yarn ethereum:build && yarn ethereum:create-local && yarn ethereum:deploy-local --version-label v0.0.1",
    "ethereum:build": "graph build",
    "ethereum:codegen": "graph codegen --output-dir src/types",
    "ethereum:create-local": "graph create --node http://localhost:8020/ sandclock-eth",
    "ethereum:deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ sandclock-eth",
    "ethereum:deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 sandclock-eth",
    "ethereum:prep:local": "json-merger liquity/local.json -p -o ./config/local.json && mustache ./config/local.json subgraph.template.yaml > subgraph.yaml",
    "ethereum:prep:staging": "mustache ./config/staging.json subgraph.template.yaml > subgraph.yaml",
    "ethereum:prep:production": "mustache ./config/production.json subgraph.template.yaml > subgraph.yaml",
    "ethereum:remove-local": "graph remove --node http://localhost:8020/ sandclock-eth",
    "ethereum:test": "yarn ethereum:prep:local && graph test",
    "polygon:all-local": "yarn polygon:prep:local && yarn polygon:codegen && yarn polygon:build && yarn polygon:create-local && yarn polygon:deploy-local --version-label v0.0.1",
    "polygon:build": "graph build",
    "polygon:codegen": "graph codegen --output-dir src/types",
    "polygon:create-local": "graph create --node http://localhost:8020/ sandclock-polygon",
    "polygon:deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ sandclock-polygon",
    "polygon:deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 sandclock-polygon",
    "polygon:prep:local": "json-merger donations/local.json -p -o ./config/local.json && mustache ./config/local.json subgraph.template.yaml > subgraph.yaml",
    "polygon:prep:staging": "mustache ./config/staging.json polygon/subgraph.template.yaml > subgraph.yaml",
    "polygon:prep:production": "mustache ./config/production.json polygon/subgraph.template.yaml > subgraph.yaml",
    "polygon:remove-local": "graph remove --node http://localhost:8020/ sandclock-polygon",
    "polygon:test": "yarn polygon:prep:local && cd polygon && graph test",
    "test": "yarn ethereum:test && yarn polygon:test"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.25.1",
    "@graphprotocol/graph-ts": "0.27.0",
    "json-merger": "^1.1.9",
    "matchstick-as": "^0.5.0",
    "mustache": "^4.2.0"
  }
}
